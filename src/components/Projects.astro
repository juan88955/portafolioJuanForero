---
import GitHub from "./icons/GitHub.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import ReactJS from "./icons/React.astro";
import Angular from "./icons/Angular.astro";

const TAGS = {
  ReactJS: {
    name: "React js",
    class: "bg-black text-white",
    icon: ReactJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#DD0031] text-white",
    icon: Angular,
  },
};
const PROJECTS = [
  {
    title: "My Tinerary - Planificar viajes",
    description:
      "MyTinerary es una aplicación web para planificar y organizar viajes de manera eficiente. Permite a los usuarios crear itinerarios personalizados.",
    link: "https://front-end-mern-91f73.web.app/",
    github: "https://github.com/juan88955/mytinerary-JuanForero",
    image: "/projects/mytineraryapp1.png",
    tags: [TAGS.ReactJS, TAGS.TAILWIND],
  },
  {
    title: "Valorant Agents - Explorador de Agentes de Valorant",
    description:
      "Valorant Agents es una aplicación web interactiva que permite a los usuarios explorar información detallada sobre los agentes del juego Valorant.",
    link: "https://valoran-agents.vercel.app/",
    github: "https://github.com/juan88955/valoranAgents",
    image: "/projects/Capvalorant.png",
    tags: [TAGS.ReactJS, TAGS.TAILWIND],
  },
  {
    title: "Pokemon Finder - Buscador de Pokemon",
    description:
      "Pokemon Finder es una aplicación web que permite a los usuarios buscar y descargar los Pokemon de su celular.",
    link: "https://pokemon-finder.vercel.app/",
    github: "https://github.com/juan88955/TrabajoFinalAngular",
    image: "/projects/pokemonfinder.png",
    tags: [TAGS.ANGULAR, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
